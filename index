<body>
  <!-- Pantalla de inicio para iOS -->
  <div id="loading">
    <h2>Experiencia AR Fábrica</h2>
    <p>Por favor, permite acceso a la cámara cuando se solicite</p>
    <button id="start-btn">INICIAR EXPERIENCIA</button>
    <div id="error-msg"></div>
  </div>

  <a-scene 
    vr-mode-ui="enabled: false"
    embedded 
    arjs="sourceType: webcam; debugUIEnabled: false; detectionMode: mono_and_matrix;"
    renderer="logarithmicDepthBuffer: true; precision: medium;"
  >
    <!-- Marcador Máquina 1 -->
    <a-marker 
      type="pattern" 
      url="assets/patterns/machine1.patt"
      id="marker-machine1"
    >
      <a-video 
        src="assets/videos/video1.mp4" 
        width="1.6" 
        height="0.9"
        position="0 0.5 0"
        rotation="-90 0 0"
        visible="false"
        id="video1"
        playsinline
        webkit-playsinline
        muted
      ></a-video>
    </a-marker>

    <a-entity camera></a-entity>
  </a-scene>

  <div class="video-info" id="info-text">Busca los marcadores con la cámara</div>

  <script>
    // ===== DETECCIÓN DE COMPATIBILIDAD =====
    const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
    const errorEl = document.getElementById('error-msg');
    
    if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
      errorEl.textContent = 'ERROR: Tu navegador no soporta acceso a cámara. Usa Safari en iPhone.';
    }

    // ===== CONTROL DE INICIO =====
    document.getElementById('start-btn').addEventListener('click', () => {
      // Forzar inicio de AR
      const scene = document.querySelector('a-scene');
      
      // iOS necesita gesto de usuario para iniciar cámara
      navigator.mediaDevices.getUserMedia({ video: true })
        .then(() => {
          scene.enterVR();
          document.getElementById('loading').style.display = 'none';
        })
        .catch(err => {
          errorEl.textContent = `ERROR: ${err.message || 'Debes permitir acceso a la cámara'}`;
        });
    });

    // ===== CONTROL DE VIDEOS =====
    const markers = {
      "marker-machine1": {
        video: "video1",
        title: "Reparación de Máquina 1"
      }
    };

    Object.keys(markers).forEach(markerId => {
      const marker = document.getElementById(markerId);
      const videoEl = document.getElementById(markers[markerId].video);
      
      marker.addEventListener("markerFound", () => {
        videoEl.setAttribute("visible", true);
        const videoObj = videoEl.components.material.material.map.image;
        videoObj.play();
        document.getElementById("info-text").textContent = 
          `Reproduciendo: ${markers[markerId].title}`;
      });

      marker.addEventListener("markerLost", () => {
        videoEl.setAttribute("visible", false);
        const videoObj = videoEl.components.material.material.map.image;
        videoObj.pause();
        videoObj.currentTime = 0;
        document.getElementById("info-text").textContent = 
          "Busca otro marcador...";
      });
    });
  </script>
</body>
</html>